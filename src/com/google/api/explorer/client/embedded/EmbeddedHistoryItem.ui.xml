<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='res' type='com.google.api.explorer.client.Resources' />
  <ui:style>
    .item {
    }

    .item h3 {
      margin-left: 10px;
      font-weight: normal;
      color: #DD4B39;
      font-size: 20px;
    }

    .titleBar {
      background-color: #EBEBEB;
      width: auto;
      height: 29px;
      padding-top: 13px;
      border-bottom: 1px solid #A9A9A9;
      padding-left: 8px;
      outline: none;
    }

    .title {
      font-weight: bold;
    }

    .time {
      padding: 3px 0 0 6px;
      font-size: 10px;
    }

    pre {
      font-size: 13px;
      font-family: "Courier New", Courier, monospace;
      background-color: #FAFAFA;
      border: 1px solid #BBBBBB;
      padding: 11px;
      overflow: auto;
    }

    .body {
      width: 100%;
    }

    .response {
      white-space: pre-wrap;
    }

    .showHideHeaders {
      color: #500050;
      cursor: pointer;
      font-size: 9px;
      padding-left: 20px;
    }

    .error {
      background-color: red;
      padding-left: 18px;
      height: 29px;
      padding-top: 12px;
      padding-left: 8px;
      color: white;
      font-weight: bold;
      width: auto;
    }
</ui:style>
  <g:HTMLPanel styleName="{style.item}">
    <g:FocusPanel ui:field="titleBar" styleName="{style.titleBar} history-header">
      <g:HTMLPanel>
        <span ui:field="title" class="{style.title}" />
        <span ui:field="time" class="{style.time}" />
      </g:HTMLPanel>
    </g:FocusPanel>
    <div ui:field="collapseDiv" class="{style.body}">
      <g:SimplePanel ui:field="errorPanel" styleName="{style.error}" visible="false" />
      <h3>Request</h3>
      <pre ui:field="requestDiv" />
      <pre ui:field="requestBodyDiv" class="{style.response}"/>

      <h3>Response</h3>
      <pre ui:field="statusDiv" />
      <g:InlineLabel ui:field="showHideHeaders" styleName="{style.showHideHeaders}">
        - Show headers -
      </g:InlineLabel>
      <pre ui:field="responseHeadersDiv" />
      <pre ui:field="responseBodyDiv" class="{style.response}" />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
