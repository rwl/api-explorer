<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:sch="urn:import:com.google.api.explorer.client.parameter.schema"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .section {
      font-size: 14px;
      height: 100%;
      width: 100%;
    }

    .section table {
      width: 100%;
      padding: 2px;
      border-spacing: 0;
      border-collapse: collapse;
    }

    .section table td {
      vertical-align: top;
    }

    .section table td {
      padding: 0 4px;
    }

    .section table input {
      width: 100%;
    }

    .section textarea {
      width: 90%;
      height: 100px;
      margin: 5px;
    }

    .body {
      overflow-x: hidden;
      overflow-y: auto;
      width: 100%;
      max-height: 300px;
    }

    .body table,
    .body td {
      margin-top: 0;
      padding-bottom: 0 !important;
    }

    .showRequestBody {
      text-align: center;
      cursor: pointer;
      padding-top: 3px;
    }

    .popup {
    }

    .popupTitle {
      padding: 5px 0;
      text-align: center;
      font-size: 14px;
    }

    .popupBody {
      padding: 5px;
      background-color: #FFFFFF;
    }

    .requestBody {
      height: 300px;
      width: 500px;
    }

    .footer {
      width: 100%;
      padding: 4px 0;
    }

    .executing {
      vertical-align: middle;
    }

    .fields {
      width: 500px;
      max-height: 300px;
      overflow:auto;
    }

    .fieldsExplanation {
      color: #666;
      padding-bottom: 12px;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.section} form">
    <div class="{style.body}">
      <g:FlexTable ui:field="table" />
      <g:Label ui:field="bodyDisclosure" styleName="{style.showRequestBody}">
        Show request body
      </g:Label>

      <g:PopupPanel ui:field="popupPanel" autoHideEnabled="true" modal="true">
        <g:HTMLPanel styleName="{style.popup} popup">
          <div class="{style.popupTitle} title">Request body</div>
          <div class="{style.popupBody} body">
            <div class="{style.fieldsExplanation}">
                Specify what will be sent in the HTTP request body.</div>
            <g:RadioButton ui:field="selectSchemaButton" name="view" value="true">Guided view</g:RadioButton>
            <g:RadioButton ui:field="selectBasicButton" name="view">Basic view</g:RadioButton>
            <sch:SchemaForm ui:field="schemaForm" />
            <g:TextArea ui:field="requestBody" visible="false" styleName="{style.requestBody}" />
            <div>
              <g:Button ui:field="close">Close</g:Button>
            </div>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>

      <g:PopupPanel ui:field="fieldsPopupPanel" autoHideEnabled="true" modal="true">
        <g:HTMLPanel styleName="{style.popup} popup">
          <div class="{style.popupTitle} title">Use a partial fields mask</div>
          <div class="{style.popupBody} body">
            <div class="{style.fieldsExplanation}">
              Select which fields you would like to be included in the response.</div>
            <g:HTMLPanel ui:field="fieldsPlaceholder" styleName="{style.fields}"/>
            <g:Button ui:field="closeFields">Close</g:Button>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>
    </div>
    <div>
      <div class="{style.footer} footer">
        <g:Button ui:field="submit">Execute</g:Button>
        <img class="{style.executing}" ui:field="executing" />
        <g:InlineLabel ui:field="requiredDescription">&nbsp;*
          required field
        </g:InlineLabel>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
