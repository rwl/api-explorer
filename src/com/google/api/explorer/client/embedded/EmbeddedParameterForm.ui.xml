<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:sch="urn:import:com.google.api.explorer.client.parameter.schema"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .section {
      font-size: 13px;
      height: 100%;
      width: 100%;
    }

    .section table {
      width: 100%;
      padding: 2px;
      border-spacing: 0;
      border-collapse: collapse;
    }

    .section table td {
      vertical-align: middle;
      padding: 0 4px;
      border-bottom: 1px solid #DBDBDB;
      padding: 14px;
    }

    .section input {
      width: 100%;
      border: 1px solid silver;
      height: 29px;
    }

    .section input:focus {
      border: 1px solid #4D90FE;
    .body {
      overflow-x: hidden;
      overflow-y: auto;
      width: 100%;
      max-height: 282px;
    }

    .body table,
    .body td {
      margin-top: 0;
    }

    .showRequestBody {
      text-align: center;
      cursor: pointer;
      padding: 14px 0;
    }

    .popup {
      border: 1px solid #C4C4C4;
      background-color: white;
      font-family: Arial, sans-serif;
      font-size: 13px;
      padding: 20px;
      -webkit-box-shadow: 0 4px 16px rgba(0,0,0,0.2);
    }

    .popupTitle {
      font-weight: normal;
      color: #DD4B39;
      font-size: 20px;
    }

    .popupBody {
      padding: 5px;
      background-color: #FFFFFF;
    }

    .requestBody {
      height: 300px;
      width: 500px;
    }

    .footer {
      border: solid #A9A9A9;
      border-width: 1px 0;
      padding: 8px;
    }

    .footer button,
    .popup button {
      border: 1px solid #3079ED;
      background-color: #4D90FE;
      border-radius: 2px;
      font-weight: bold;
      font-size: 11px;
      cursor: default;
      color: white;
      height: 29px;
      width: 72px;
      padding: 7px;
    }

    .popup select {
      height: 29px;
    }

    .popup button {
      margin-top: 16px;
    }

    .footer span {
      color: #666;
      padding-left: 14px;
    }

    .executing {
      vertical-align: middle;
    }

    .fields {
      width: 500px;
      max-height: 300px;
      overflow:auto;
    }

    .fieldsExplanation {
      color: #666;
      padding-bottom: 12px;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.section} form">
    <div class="{style.body}">
      <g:FlexTable ui:field="table" />
      <g:Label ui:field="bodyDisclosure" styleName="{style.showRequestBody}">
        Show request body
      </g:Label>

      <g:PopupPanel ui:field="popupPanel" modal="true">
        <g:HTMLPanel styleName="{style.popup}">
          <div class="{style.popupTitle}">Request body</div>
          <div class="{style.popupBody}">
            <div class="{style.fieldsExplanation}">
                Specify what will be sent in the HTTP request body.</div>
            <g:TabPanel ui:field="tabPanel">
              <g:Tab text="Structured Editor">
                <g:SimplePanel>
                  <sch:SchemaForm ui:field="schemaForm" />
                </g:SimplePanel>
              </g:Tab>
              <g:Tab text="Plain Text Editor">
                <g:SimplePanel>
                  <g:TextArea ui:field="requestBody" styleName="{style.requestBody}" />
                </g:SimplePanel>
              </g:Tab>
            </g:TabPanel>
            <div>
              <g:Button ui:field="close">Close</g:Button>
            </div>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>

      <g:PopupPanel ui:field="fieldsPopupPanel" autoHideEnabled="true" modal="true">
        <g:HTMLPanel styleName="{style.popup} popup">
          <div class="{style.popupTitle} title">Use a partial fields mask</div>
          <div class="{style.popupBody} body">
            <div class="{style.fieldsExplanation}">
              Select which fields you would like to be included in the response.</div>
            <g:HTMLPanel ui:field="fieldsPlaceholder" styleName="{style.fields}"/>
            <g:Button ui:field="closeFields">Close</g:Button>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>
    </div>
    <div>
      <div class="{style.footer} footer">
        <g:Button ui:field="submit">Execute</g:Button>
        <img class="{style.executing}" ui:field="executing" />
        <g:InlineLabel ui:field="requiredDescription">Required fields are bolded</g:InlineLabel>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
