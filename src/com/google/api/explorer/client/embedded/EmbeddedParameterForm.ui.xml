<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:sch="urn:import:com.google.api.explorer.client.parameter.schema"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .section {
      font-size: 13px;
      height: 100%;
      width: 100%;
    }

    .section table {
      width: 100%;
      padding: 2px;
      border-spacing: 0;
      border-collapse: collapse;
    }

    .section table td {
      vertical-align: middle;
      padding: 0 4px;
      margin-left: 4px;
      border-bottom: 1px solid #DBDBDB;
      padding: 14px;
    }

    .section input {
      width: 190px;
      border: 1px solid silver;
      height: 29px;
    }

    .section input[type='text'] {
      padding-left: 8px;
    }

    .section input:focus,
    .showRequestBody div:focus {
      border: 1px solid #4D90FE;
    }

    .body table,
    .body td {
      margin-top: 0;
    }

    .showRequestBody,
    .popup button {
      text-align: center;
      background-color: #F5F5F5;
      border: 1px solid rgba(0,0,0,0.1);
      color: #444444;
      border-radius: 2px;
      font-weight: bold;
      font-size: 11px;
      height: 29px;
      line-height: 27px;
      cursor: default;
      width: 200px;
    }

    .showRequestBody:hover {
      border-color: #c6c6c6;
    }

    .popup {
      border: 1px solid #C4C4C4;
      background-color: white;
      font-family: Arial, sans-serif;
      font-size: 13px;
      padding: 20px;
      -webkit-box-shadow: 0 4px 16px rgba(0,0,0,0.2);
    }

    .popupTitle {
      font-weight: normal;
      color: #DD4B39;
      font-size: 20px;
    }

    .popupBody {
      padding: 5px;
      background-color: #FFFFFF;
    }

    .requestBody {
      height: 300px;
      width: 500px;
    }

    .execute,
    .popup button {
      border-radius: 2px;
      font-weight: bold;
      font-size: 11px;
      cursor: default;
      height: 29px;
      border: 1px solid #3079ed;
      color: #FFF;
      width: 200px;
      background-color: #4d90fe;
      background-image: -webkit-gradient(linear,left top,left bottom,from(#4d90fe),to(#4787ed));
      background-image: -webkit-linear-gradient(top,#4d90fe,#4787ed);
      background-image: -moz-linear-gradient(top,#4d90fe,#4787ed);
      background-image: -ms-linear-gradient(top,#4d90fe,#4787ed);
      background-image: -o-linear-gradient(top,#4d90fe,#4787ed);
      background-image: linear-gradient(top,#4d90fe,#4787ed);
      filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#4d90fe',EndColorStr='#4787ed');
    }

    .execute:hover,
    .popup button:hover {
      background-color: #357ae8;
      background-image: -webkit-gradient(linear,left top,left bottom,from(#4d90fe),to(#357ae8));
      background-image: -webkit-linear-gradient(top,#4d90fe,#357ae8);
      background-image: -moz-linear-gradient(top,#4d90fe,#357ae8);
      background-image: -ms-linear-gradient(top,#4d90fe,#357ae8);
      background-image: -o-linear-gradient(top,#4d90fe,#357ae8);
      background-image: linear-gradient(top,#4d90fe,#357ae8);
      filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#4d90fe',EndColorStr='#357ae8');
    }

    .popup button {
      width: 72px;
    }

    .popup select {
      height: 29px;
    }

    .popup button {
      margin-top: 16px;
    }

    .footer span {
      color: #666;
      padding-left: 14px;
    }

    .executing {
      vertical-align: middle;
    }

    .fields {
      width: 500px;
      max-height: 300px;
      overflow:auto;
    }

    .fieldsExplanation {
      color: #666;
      padding-bottom: 12px;
    }

    .bodyDisclosureContainer {
      display: inline;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.section} form">
    <div class="{style.body}">
      <g:FlexTable ui:field="table" />

      <g:PopupPanel ui:field="popupPanel" modal="true">
        <g:HTMLPanel styleName="{style.popup}">
          <div class="{style.popupTitle}">Request body</div>
          <div class="{style.popupBody}">
            <div class="{style.fieldsExplanation}">
                Specify what will be sent in the HTTP request body.</div>
            <g:TabPanel ui:field="tabPanel">
              <g:Tab text="Structured Editor">
                <g:SimplePanel>
                  <sch:SchemaForm ui:field="schemaForm" />
                </g:SimplePanel>
              </g:Tab>
              <g:Tab text="Plain Text Editor">
                <g:SimplePanel>
                  <g:TextArea ui:field="requestBody" styleName="{style.requestBody}" />
                </g:SimplePanel>
              </g:Tab>
            </g:TabPanel>
            <div>
              <g:Button ui:field="close">Close</g:Button>
            </div>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>

      <g:PopupPanel ui:field="fieldsPopupPanel" autoHideEnabled="true" modal="true">
        <g:HTMLPanel styleName="{style.popup} popup">
          <div class="{style.popupTitle} title">Use a partial fields mask</div>
          <div class="{style.popupBody} body">
            <div class="{style.fieldsExplanation}">
              Select which fields you would like to be included in the response.</div>
            <g:HTMLPanel ui:field="fieldsPlaceholder" styleName="{style.fields}"/>
            <g:Button ui:field="closeFields">Close</g:Button>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>
    </div>

    <!--  These will all be moved into the table itself. -->
    <g:FlowPanel ui:field="bodyDisclosure" styleName="{style.bodyDisclosureContainer}">
      <g:Button ui:field="bodyDisclosureButton" styleName="{style.showRequestBody}">
        Add request body
      </g:Button>
    </g:FlowPanel>
    <g:Button styleName="{style.execute}" ui:field="submit">Execute</g:Button>
    <img class="{style.executing}" ui:field="executing" />
    <g:FlowPanel ui:field="requiredDescription">
      <g:InlineLabel ui:field="requiredDescriptionLabel">bold red</g:InlineLabel>
      <g:InlineLabel>&nbsp;= required</g:InlineLabel>
    </g:FlowPanel>

    <!--  This is unused but must be present to stay compliant with the subclass -->
    <g:Label ui:field="bodyDisclosureLabel" visible="false">Unused</g:Label>
  </g:HTMLPanel>
</ui:UiBinder>
