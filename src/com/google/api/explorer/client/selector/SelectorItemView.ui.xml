<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .selectorItem {
      width: 100%;
      cursor: pointer;
      padding: 6px 2px 6px 6px;
      border-bottom: 1px solid #EEEEEE;
    }

    .image {
      height: 16px;
      margin: 0;
      vertical-align: middle;
    }

    .text {
      height: 16px;
      padding-top: 3px;
      padding-right: 20px;
      font-size: 15px;
    }

    .subtext {
      font-size: 13px;
      color: #666;
    }

    .subtextContainer {
      padding-right: 6px;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.selectorItem}">
    <img ui:field="image" class="{style.image}" />
    <span class="{style.text}" ui:field="text" />
    <div class="{style.subtextContainer}">
      <a class="{style.subtext}" ui:field="subtext" target="_blank" />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
