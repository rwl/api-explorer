<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='res' type='com.google.api.explorer.client.Resources' />
  <ui:style>
    .section {
      position: relative;
      height: 267px;
      font-size: 14px;
      width: 100%;
    }

    .header {
      width: 100%;
      background-color: #F3F3F3;
      text-align: center;
      border-bottom: 1px solid #C9D7F1;
      padding: 5px 0;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 15px;
    }

    .panel {
      width: 100%;
    }

    .focusPanel {
      width: 100%;
    }

    .emptyMessage {
      padding-top: 15px;
      width: 100%;
      text-align: center;
    }

    .container {
      position: absolute;
      top: 26px;
      left: 0;
      right: 0;
      bottom: 0;
      overflow-y: auto;
      overflow-x: hidden;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.section}">
    <g:Label ui:field="header" styleName="{style.header}" />
    <div class="{style.container}">
      <g:Label ui:field="loading" visible="false" styleName="{res.style.loading}" />
      <g:Label ui:field="emptyMessage" visible="false" styleName="{style.emptyMessage}" />
      <g:VerticalPanel ui:field="panel" styleName="{style.panel}" />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>