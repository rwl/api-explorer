<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .section {
      font-size: 14px;
      height: 310px;
      width: 100%;
    }

    .header {
      width: 100%;
      background-color: #F3F3F3;
      text-align: center;
      border-bottom: 1px solid #C9D7F1;
      padding: 5px 0;
    }

    .noParams {
      text-align: center;
      width: 100%;
      padding-top: 10px;
    }

    .section table {
      width: 100%;
      padding: 2px;
      border-spacing: 0;
      border-collapse: collapse;
    }

    .section table td {
      vertical-align: top;
    }

    .section table td {
      padding: 0 4px;
    }

    .section table input {
      width: 100%;
    }

    .section textarea {
      width: 90%;
      height: 100px;
      margin: 5px;
    }

    .body {
      height: 210px;
      overflow-x: hidden;
      overflow-y: auto;
    }

    .showRequestBody {
      text-align: center;
      color: #4272DB;
      text-decoration: underline;
      cursor: pointer;
      padding-top: 3px;
    }

    .popup {
      border: 3px solid #C9D7F1;
    }

    .popupTitle {
      padding: 5px 0;
      text-align: center;
      font-size: 14px;
      border-bottom: 1px solid #C9D7F1;
      background-color: #F3F3F3;
    }

    .popupBody {
      padding: 5px;
      background-color: #FFFFFF;
    }

    .requestBody {
      height: 300px;
      width: 500px;
    }

    .footer {
      width: 100%;
      height: 40px;
      background-color: #F3F3F3;
      padding-top: 2px;
      border-top: 1px solid #C9D7F1;
    }

    .executing {
      vertical-align: middle;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.section}">
    <g:Label styleName="{style.header}">Fill in parameters</g:Label>
    <div class="{style.body}">
      <g:FlexTable ui:field="table" />
      <g:Label ui:field="noParams" styleName="{style.noParams}">
        This method takes no parameters.
      </g:Label>

      <g:Label ui:field="bodyDisclosure" styleName="{style.showRequestBody}" />

      <g:PopupPanel ui:field="popupPanel" autoHideEnabled="true" modal="true">
        <g:HTMLPanel styleName="{style.popup}">
          <div class="{style.popupTitle}">Request body</div>
          <div class="{style.popupBody}">
            <g:TextArea ui:field="requestBody" styleName="{style.requestBody}" />
            <div><g:Button ui:field="close">Close</g:Button></div>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>
    </div>
    <div class="{style.footer}">
      <g:Button ui:field="submit">Execute</g:Button>
      <img class="{style.executing}" ui:field="executing" />
      <g:InlineLabel ui:field="requiredDescription">&nbsp;*
        required field
      </g:InlineLabel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
