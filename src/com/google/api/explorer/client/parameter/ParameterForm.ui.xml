<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:sch="urn:import:com.google.api.explorer.client.parameter.schema">
  <ui:style>
    .section {
      font-size: 14px;
      height: 310px;
      width: 100%;
    }

    .header {
      width: 100%;
      background-color: #F3F3F3;
      text-align: center;
      border-bottom: 1px solid #C9D7F1;
      padding: 5px 0;
      height: 15px;
    }

    .section table {
      width: 100%;
      padding: 2px;
      border-spacing: 0;
      border-collapse: collapse;
    }

    .section table td {
      vertical-align: top;
    }

    .section table td {
      padding: 0 4px;
    }

    .section table input {
      width: 100%;
    }

    .body {
      height: 210px;
      overflow-x: hidden;
      overflow-y: auto;
    }

    .showRequestBody {
      text-align: center;
      color: #4272DB;
      text-decoration: underline;
      cursor: pointer;
      padding-top: 3px;
    }

    .popup {
      border: 3px solid #C9D7F1;
    }

    .popupTitle {
      padding: 5px 0;
      text-align: center;
      font-size: 14px;
      border-bottom: 1px solid #C9D7F1;
      background-color: #F3F3F3;
    }

    .popupBody {
      padding: 5px;
      background-color: #FFFFFF;
    }

    .popupBody input {
      border: 1px solid #AAAAAA;
      font-family: monospace;
    }

    .requestBody {
      height: 300px;
      width: 500px;
    }

    .footer {
      width: 100%;
      height: 40px;
      background-color: #F3F3F3;
      padding-top: 2px;
      border-top: 1px solid #C9D7F1;
    }

    .executing {
      vertical-align: middle;
    }

    .fields {
      width: 400px;
      max-height: 300px;
      overflow:auto;
    }

    .fieldsExplanation {
      color: #666;
      padding-bottom: 12px;
    }

    .requiredDescriptionContainer {
      display: inline;
    }

    .bodyDisclosureContainer {
      display: inline;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.section}">
    <g:Label styleName="{style.header}">Fill in parameters</g:Label>
    <div class="{style.body}">
      <g:FlexTable ui:field="table" />
      <g:FlowPanel ui:field="bodyDisclosure" styleName="{style.bodyDisclosureContainer}">
        <g:Label ui:field="bodyDisclosureLabel" styleName="{style.showRequestBody}" />
      </g:FlowPanel>

      <g:PopupPanel ui:field="popupPanel" modal="true">
        <g:HTMLPanel styleName="{style.popup}">
          <div class="{style.popupTitle}">Request body</div>
          <div class="{style.popupBody}">
            <div class="{style.fieldsExplanation}">
                Specify what will be sent in the HTTP request body.</div>
            <g:TabPanel ui:field="tabPanel">
              <g:Tab text="Structured Editor">
                <g:SimplePanel>
                  <sch:SchemaForm ui:field="schemaForm" />
                </g:SimplePanel>
              </g:Tab>
              <g:Tab text="Plain Text Editor">
                <g:SimplePanel>
                  <g:TextArea ui:field="requestBody" styleName="{style.requestBody}" />
                </g:SimplePanel>
              </g:Tab>
            </g:TabPanel>
            <div>
              <g:Button ui:field="close">Close</g:Button>
            </div>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>

      <g:PopupPanel ui:field="fieldsPopupPanel" modal="true">
        <g:HTMLPanel styleName="{style.popup}">
          <div class="{style.popupTitle}">Use partial fields mask</div>
          <div class="{style.popupBody}">
            <div class="{style.fieldsExplanation}">
              Select which fields you would like to be included in the response.</div>
            <g:HTMLPanel ui:field="fieldsPlaceholder" styleName="{style.fields}"/>
            <g:Button ui:field="closeFields">Close</g:Button>
          </div>
        </g:HTMLPanel>
      </g:PopupPanel>
    </div>
    <div class="{style.footer}">
      <g:Button ui:field="submit">Execute</g:Button>
      <img class="{style.executing}" ui:field="executing" />
      <g:FlowPanel styleName="{style.requiredDescriptionContainer}" ui:field="requiredDescription">
        <g:InlineLabel>&nbsp;*
          required field
        </g:InlineLabel>
      </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
